pkgname=popt
pkgver=1.16
pkgrel=2
pkgdesc="A commandline option parser"
arch=('i686' 'x86_64')
url="ftp://anduin.linuxfromscratch.org"
depends=('libiconv' 'glib2')
makedepends=('sed' 'libiconv-devel' 'glib2-devel' 'doxygen')
license=('custom')

